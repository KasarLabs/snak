{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["./common/*"],
      "@config/*": ["../config/*"],
      "@plugins/*": ["../plugins/*"],
      "@server/*": ["../server/*"],
      "@client/*": ["../client/*"],
      "@agents/*": ["../agents/*"]
    }
  },
  "include": [
    "./agent/**/*",
    "./common/**/*",
    "./local.ts",
    "./index.ts" 
  ],
  "exclude": ["node_modules", "dist"]
}
