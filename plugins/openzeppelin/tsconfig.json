{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": "./buildcache/.tsbuildinfo"
  },
  "include": [
    "./src/**/*",
    "./src/**/*.ts", 
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}

