{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@hijox/database",
  "type": "module",
  "version": "0.1.2",
  "files": [
    "dist",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsc --watch",
    "test-setup": "docker compose -f compose.test.yaml up -d",
    "test-teardown": "docker compose -f compose.test.yaml rm -fsv",
    "test-jest": "DOTENV_CONFIG_PATH=../../.env jest --config jest.config.cjs --setupFiles dotenv/config",
    "test": "pnpm test-setup && pnpm test-jest ; ECODE=$? ; pnpm test-teardown ; exit $ECODE",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc",
    "clean": "rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "clean:all": "pnpm clean && pnpm clean:dist",
    "check-types": "tsc --noEmit"
  },
  "exports": {
    ".": "./src/database.ts",
    "./error": "./src/error.ts",
    "./queries": "./src/queries/index.ts",
    "./common": "./src/queries/common.ts"
  },
  "dependencies": {
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "typescript": "latest"
  },
  "gitHead": "19f358a4d37a9b0e25d83b2997b9bb6d27548257"
}
