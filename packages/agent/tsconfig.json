{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["./common/*"],
      "@src/*": ["./src/*"],
      "@agents/*": ["./agents/*"],
      "@lib/*": ["./shared/lib/*"],
      "@prompts/*": ["./shared/prompts/*"],
      "@config/*": ["./config/*"],
      "@types/*": ["./shared/types/*"],
      "@enums/*": ["./shared/enums/*"],
      "@schemas/*": ["./shared/schemas/*"],
      "@tools/*": ["./tools/*"],
      "@services/*": ["./services/*"]
    }
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
